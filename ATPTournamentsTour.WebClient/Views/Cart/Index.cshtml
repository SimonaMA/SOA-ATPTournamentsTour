@model IEnumerable<ATPTournamentsTour.WebClient.Models.View.CartItemViewModel>

<table class="table">
    <thead>
        <tr class="columnHeader">
            <th>TOURNAMENT NAME</th>
            <th>DATE</th>
            <th>PRICE PER TICKET</th>
            <th>QUANTITY</th>
            <th>TOTAL</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @Html.EditorForModel()
        <tr>
            <td colspan="4">
                <a asp-controller="TournamentsList" asp-action="Index">
                    <img class="backIcon" src="~/img/arrow-down.svg" /> Back to tournaments list
                </a>
            </td>
            <td class="bold big">$@Model.Sum(bl => bl.TicketPrice * bl.Quantity)</td>
        </tr>
    </tbody>
</table>

@section Widget {
    <a class="btn-primary" asp-action="Pay">Pay</a>
}
